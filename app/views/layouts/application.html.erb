<!DOCTYPE html>
<html>
  <head>
    <title>Restaurant App</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
